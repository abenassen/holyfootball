<script>
$(function(){
        $('html').keydown(function(e){
            event.preventDefault();
            if(e.which== 37) { // left
              $('#leftbutton').click();                        
              }
              else if(e.which == 39) { // right
              $('#rightbutton').click();                        
              }
            //else if(e.which == 38) { // up
            //  }
            //else if(e.which == 40) { // down
            //  }
        });
    });
</script>
